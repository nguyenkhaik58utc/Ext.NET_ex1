@model List<WebApplication2.Models.Price>

@{
    ViewBag.Title = "Column Chart - Ext.NET MVC Examples";
    var X = Html.X();
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


    <script>
        var saveChart = function (btn) {
            Ext.MessageBox.confirm('Confirm Download', 'Would you like to download the chart as an image?', function (choice) {
                if (choice === 'yes') {
                    btn.up('panel').down('chart').download();
                }
            });
        };
    </script>

</head>
<body>
    @(Html.X().ResourceManager())
    <h1>Column Chart Sample</h1>

    <p>Display a sets of random data in a column series. Reload data will randomly generate a new set of data in the store.</p>

    @(X.Panel()
        .Width(800)
        .Height(600)
        .Layout("fit")
        .TopBar(X.Toolbar()
            .Items(
                X.ToolbarFill(),

                X.Button()
                    .Text("Reload Data")
                    .Icon(Icon.ArrowRefresh)
                    .Handler("App.Store2.reload();"),

                X.Button()
                    .Text("Save Chart")
                    .Icon(Icon.Disk)
                    .Handler("saveChart")
            )
        )
        .Items(X.CartesianChart()
            .Store(X.Store()
                .ID("Store2")
                .Data(Model)
                .Model(X.Model().Fields("nameCompany", "countCmp"))
            )
            .Axes(
                X.NumericAxis()
                    .Position(Position.Left)
                    .Fields("countCmp")
                    .Grid(true)
                    .Title("Number of Hits")
                    .Minimum(0)
                    .Renderer(r => r.Handler="return Ext.util.Format.number(label, '0,0');"),

                X.CategoryAxis()
                    .Position(Position.Bottom)
                    .Fields("nameCompany")
                    .Title("Month of the Year")
                    .Label(X.ChartLabel().RotationDegrees(-45))
            )
            .Series(X.BarSeries()
                .Highlight(true)
                .XField("nameCompany")
                .YField("countCmp")
                .Tooltip(X.ChartTip()
                    .TrackMouse(true)
                    .Renderer(r => r.Handler = "this.setTitle(storeItem.get('nameCompany') + ': ' + storeItem.get('countCmp'));")
                )
                .Label(X.ChartLabel()
                    .Display(SeriesLabelDisplay.InsideEnd)
                    .Field("countCmp")
                    .Orientation(Orientation.Horizontal)
                    .Color("#333")
                    .TextAlign(TextSpriteAlign.Center)
                    .Renderer(r => r.Handler = "return Ext.util.Format.number(text, '0');")
                )
            )
        )
    )
</body>
</html>


